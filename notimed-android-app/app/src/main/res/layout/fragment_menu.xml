<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?colorSurface"
        tools:context=".views.MenuFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/menu_view"
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:background="@drawable/ic_top"
                    android:maxHeight="199dp"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/MenuWelcome_constraint"
                    app:layout_constraintBottom_toBottomOf="@+id/menu_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/menu_view"
                    app:layout_constraintTop_toTopOf="@+id/menu_view">

                    <TextView
                        android:id="@+id/label_menu"
                        style="@style/TextAppearance.Material3.HeadlineMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Welcome"
                        android:textColor="?colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/menu_username_bottom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/menu_view"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <TextView
                        android:id="@+id/menu_username"
                        style="@style/TextAppearance.Material3.HeadlineMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MrRoboto"
                        android:textColor="?colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/menu_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/menu_view"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions"
                        android:textAlignment="center"
                        android:textColor="?colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/button_reminder"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_marginleft"
                android:layout_marginTop="@dimen/button_marginTop"
                android:backgroundTint="@color/Button_Reminders"
                app:cornerRadius="@dimen/button_cornerRadius"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

            </Button>

            <Button
                android:id="@+id/button_profile"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/button_marginTop"
                android:layout_marginEnd="@dimen/button_marginRight"
                android:backgroundTint="@color/button_profile"
                app:cornerRadius="@dimen/button_cornerRadius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

            </Button>

            <Button
                android:id="@+id/button_contact"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_marginleft"
                android:layout_marginTop="@dimen/button_marginTop"
                android:backgroundTint="@color/button_contacts"
                app:cornerRadius="@dimen/button_cornerRadius"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_reminder">

            </Button>

            <Button
                android:id="@+id/button_appointment"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/button_marginTop"
                android:layout_marginEnd="@dimen/button_marginRight"
                android:backgroundTint="@color/button_medicDates"
                app:cornerRadius="@dimen/button_cornerRadius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_profile">

            </Button>

            <TextView
                android:id="@+id/reminder_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_icon"
                android:drawableTop="@drawable/ic_alarm"
                app:layout_constraintEnd_toEndOf="@+id/button_reminder"
                app:layout_constraintStart_toStartOf="@+id/button_reminder"
                app:layout_constraintTop_toTopOf="@+id/button_reminder" />

            <TextView
                android:id="@+id/reminder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginbottom_text"
                android:text="@string/reminder"
                app:layout_constraintBottom_toBottomOf="@+id/button_reminder"
                app:layout_constraintEnd_toEndOf="@+id/button_reminder"
                app:layout_constraintStart_toStartOf="@+id/button_reminder" />

            <TextView
                android:id="@+id/profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_icon"
                android:drawableTop="@drawable/ic_profileicon"
                app:layout_constraintEnd_toEndOf="@+id/button_profile"
                app:layout_constraintStart_toStartOf="@+id/button_profile"
                app:layout_constraintTop_toTopOf="@+id/button_profile" />

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginbottom_text"
                android:text="@string/profile"
                app:layout_constraintBottom_toBottomOf="@+id/button_profile"
                app:layout_constraintEnd_toEndOf="@+id/button_profile"
                app:layout_constraintStart_toStartOf="@+id/button_profile" />

            <TextView
                android:id="@+id/contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_icon"
                android:drawableTop="@drawable/ic_contact"
                app:layout_constraintEnd_toEndOf="@+id/button_contact"
                app:layout_constraintStart_toStartOf="@+id/button_contact"
                app:layout_constraintTop_toTopOf="@+id/button_contact" />

            <TextView
                android:id="@+id/contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginbottom_text"
                android:text="@string/contacts"
                app:layout_constraintBottom_toBottomOf="@+id/button_contact"
                app:layout_constraintEnd_toEndOf="@+id/button_contact"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="@+id/button_contact" />

            <TextView
                android:id="@+id/medicdate_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_icon"
                android:drawableTop="@drawable/ic_book"
                app:layout_constraintEnd_toEndOf="@+id/button_appointment"
                app:layout_constraintStart_toStartOf="@+id/button_appointment"
                app:layout_constraintTop_toTopOf="@+id/button_appointment" />

            <TextView
                android:id="@+id/medicdate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginbottom_text"
                android:text="@string/appointment"
                app:layout_constraintBottom_toBottomOf="@+id/button_appointment"
                app:layout_constraintEnd_toEndOf="@+id/button_appointment"
                app:layout_constraintStart_toStartOf="@+id/button_appointment" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</layout>